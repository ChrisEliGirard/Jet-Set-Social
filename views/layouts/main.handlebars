<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jet Set Social</title>
  <link rel="stylesheet" href="/css/homepage.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/56a474b8e5.js" crossorigin="anonymous"></script>
  <script src="js/carousel.js" defer></script>
  <link rel="stylesheet" href="/css/login.css"> 
</head>

<body class="bg-orange-200">
  <div>
  <header class="bg-gradient-to-r from-green-700 to-lime-600 ... p-4">
    <nav class=" container mx-auto  flex flex-wrap justify-between items-center text-white">
      <div class="text-4xl cursor-pointer"><a href="#"><i class="fa-sharp fa-solid fa-plane"></i>Jet Set Vacations</a></div>
      <!-- Search Bar -->
      <div>
        <form class="flex-initial">
          <i class="fa-solid fa-magnifying-glass-location mr-2"></i>
          <input class="w-100 h-100 text-sm rounded shadow-xl" id="userInput" type="text" placeholder="   Search..." />
        </form>
      </div>
      <!-- Dropdown Menu WIP -->
      <div>
        <i class="fa-solid fa-user"></i>

        <a class="ml-8 font-bold hover:underline" href="/">Home</a>
        <a class="ml-8 font-bold hover:underline" href="/profile">Profile</a>
        {{#if logged_in}}
          <a class="ml-8 font-bold hover:underline" id="logout" href="#">Logout</a>
        {{else}}
          <a class="ml-8 font-bold hover:underline" href="/login">Login</a>
        {{/if}}
        
      </div>
    </nav>
  </header>
  <main>
    {{{body}}}
  </main>
  </div>
</body>
<footer class="bg-gradient-to-r from-green-800 via-green-600 to-lime-600">
  <div class="container mx-auto flex justify-center items-center text-white uppercase py-4">
    <i class="fa-sharp fa-solid fa-plane"></i>
    <p>Made by Jet Set Social</p>
  </div>
</footer>
</html>
