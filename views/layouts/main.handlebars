<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jet Set Social</title>
  <link rel="stylesheet" href="css/output.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.3/flowbite.min.css" rel="stylesheet" />
  <script src="https://kit.fontawesome.com/56a474b8e5.js" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.3/flowbite.min.js"></script>
  <script src="js/carousel.js"></script>
</head>

<body class="bg-orange-200">
  <div>
    {{#unless loginRender}}
    <header class="bg-gradient-to-r from-green-700 to-lime-600 ... p-4">
      <nav class=" container mx-auto flex flex-wrap justify-between items-center text-white">
        <div class="text-md sm:text-4xl cursor-pointer "><a href="#"><i
              class="fa-sharp fa-solid fa-plane mr-1 "></i>Jet Set Vacations</a>
        </div>
        <!-- Search Bar -->
        <div class="p-3 basis-1/3">
          <form class="flex-auto">
            <input class="w-100 h-100 text-sm text-black rounded shadow-xl" id="userInput" type="text"
              placeholder="   Search..." />
              <i class="fa-solid fa-magnifying-glass-location"></i>
          </form>
        </div>
        <!-- Dropdown menu -->
        <div>
          <button id="dropdownHoverButton" data-dropdown-toggle="dropdown" data-dropdown-trigger="hover"
            class="text-white bg-lime-700 hover:bg-lime-800 focus:ring-4 focus:outline-none focus:ring-lime-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center bg-lime-500 hover:bg-lime-700 focus:ring-lime-800"
            type="button"> <i class="fa-solid fa-user"></i> <svg class="w-4 h-4 ml-2" aria-hidden="true" fill="none"
              stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg></button>
          <!-- Dropdown menu -->
          <div id="dropdownHover"
            class="z-10 hidden bg-white divide-y divide-lime-100 rounded-lg shadow w-44 bg-gradient-to-b from-lime-500 to-yellow-400">
            <ul class="py-2 text-sm text-white text-white" aria-labelledby="dropdownHoverButton">
              <li>
                <a href="#"
                  class="block px-4 py-2 hover:bg-lime-100 hover:bg-lime-600 hover:text-white">Home</a>
              </li>
              <li>
                <a href="#"
                  class="block px-4 py-2 hover:bg-lime-100 hover:bg-lime-600 hover:text-white">Profile</a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-lime-100 hover:bg-lime-600 hover:text-white">Sign
                  out</a>
              </li>
            </ul>
          </div>
        </div>
        
        {{!-- <div>
          <i class="fa-solid fa-user"></i>

          <a class="ml-8 font-bold hover:underline" href="/">Home</a>
          <a class="ml-8 font-bold hover:underline" href="/profile">Profile</a>
          {{#if logged_in}}
          <a class="ml-8 font-bold hover:underline" id="logout" href="#">Logout</a>
          {{else}}
          <a class="ml-8 font-bold hover:underline" href="/login">Login</a>
          {{/if}}

        </div> --}}
      </nav>
    </header>
    {{/unless}}
    <main>
      {{{body}}}
    </main>
  </div>

<footer class="bg-gradient-to-r from-green-800 via-green-600 to-lime-600">
  <div class="container mx-auto flex justify-center items-center text-white uppercase py-4">
    <i class="fa-sharp fa-solid fa-plane mr-2"></i>
    <p>Made by Jet Set Social</p>
  </div>
</footer>
<script src="js/search.js"></script>
<!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
   
</body>